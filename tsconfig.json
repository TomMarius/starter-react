{
	"compilerOptions": {
		"noEmit": true,

		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"jsx": "react-jsx",

		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"isolatedModules": true,

		"strict": true,

		"paths": {
			"~/*": ["./src/*"]
		}
	},

	"include": ["./src/**/*"]
}
