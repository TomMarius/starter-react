{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	},

	"formatter": {
		"indentStyle": "tab"
	},

	"organizeImports": {
		"enabled": true
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single"
		}
	},

	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	},

	"linter": {
		"rules": {
			"recommended": true,

			"style": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
